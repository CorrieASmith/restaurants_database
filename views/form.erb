<form action="/restaurants" method="post">

  <input type="hidden" name="id" value="<% DB.exec("SELECT id FROM restaurants;")%>">
  <div class="form-group">
    <label for="name">Restaurant</label>
    <input type="text" name="name" placeholder="e.g. Fogo de Chao">
  </div>
  <div class="form-group">
    <label for="location">Location</label>
    <input type="text" name="location" placeholder="e.g. Northeast">
  </div>
  <div class="form-group">
    <label for="phone">Phone Number</label>
    <input type="text" name="phone" placeholder="e.g. 555-555-5555">
  </div>

  <button type="submit" class ="btn btn-default btn-lg">Let's Goooo!</button>
</form>
